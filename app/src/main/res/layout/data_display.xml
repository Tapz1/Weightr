<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center">

    <TextView
        android:id="@+id/dataHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Your Weight History"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:textSize="24sp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="87dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:text="Date"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="87dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:text="Weight    (lbs)"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="87dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:text="Weight Goal (lbs)"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15sp"/>


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="85dp"
                android:layout_height="27dp"
                android:layout_column="1"
                android:text="04/01/2022"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:layout_width="83dp"
                android:layout_height="27dp"
                android:layout_column="2"
                android:text="170.2"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="27dp"
                android:layout_column="3"
                android:text="165"
                android:textAlignment="center"
                android:textSize="12sp" />

            <Button
                android:id="@+id/editButton1"
                android:layout_width="67dp"
                android:layout_height="49dp"
                android:text="Edit"
                android:textSize="10sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/deleteButton1"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="Delete"
                android:textSize="10sp"
                android:textStyle="bold" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="85dp"
                android:layout_height="27dp"
                android:layout_column="1"
                android:text="03/26/2022"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:layout_width="83dp"
                android:layout_height="27dp"
                android:layout_column="2"
                android:text="175.6"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="27dp"
                android:layout_column="3"
                android:text="170"
                android:textAlignment="center"
                android:textSize="12sp" />

            <Button
                android:id="@+id/editButton2"
                android:layout_width="67dp"
                android:layout_height="49dp"
                android:text="Edit"
                android:textSize="10sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/deleteButton2"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="Delete"
                android:textSize="10sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="85dp"
                android:layout_height="27dp"
                android:layout_column="1"
                android:text="03/20/2022"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:layout_width="83dp"
                android:layout_height="27dp"
                android:layout_column="2"
                android:text="180.0"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="27dp"
                android:layout_column="3"
                android:text="170"
                android:textAlignment="center"
                android:textSize="12sp" />

            <Button
                android:id="@+id/editButton"
                android:layout_width="67dp"
                android:layout_height="49dp"
                android:text="Edit"
                android:textSize="10sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="Delete"
                android:textSize="10sp"
                android:textStyle="bold" />


        </TableRow>

    </TableLayout>


</LinearLayout>